<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.badacadabra.tweesty"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.badacadabra.tweesty.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.badacadabra.tweesty.TwitterFeedActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="net.badacadabra.tweesty.AboutActivity"
            android:label="@string/about_label" >
        </activity>
        <activity
            android:name="net.badacadabra.tweesty.SettingsActivity"
            android:label="@string/settings_label" >
        </activity>
    </application>

</manifest>
